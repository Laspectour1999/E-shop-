@model IEnumerable<E_shop.Models.Produit> 

@{ 
    ViewBag.Title = "ListeProduit";
}

<h2>Liste des Produits</h2>
<table class="table table-striped table-hover ">
    <tr class="info">
        <th>@Html.DisplayNameFor(model => model.NomProduit)</th>
        <th>@Html.DisplayNameFor(model => model.produitImage)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.Prix)</th>
        <th>@Html.DisplayNameFor(model => model.Quantite)</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => item.NomProduit)</td>
            <td>
                @if (item.produitImage != null)
                {
                    <img width="200" src="@Url.Action("GetImage", new {id=item.IdProduit})" />
                }
            </td>
            <td>@Html.DisplayFor(model => item.Description)</td>
            <td>@Html.DisplayFor(model => item.Prix)</td>
            <td>@Html.DisplayFor(model => item.Quantite)</td>
            <td>@Html.ActionLink("Afficher Details", "AfficherProduit", new { id = item.IdProduit })</td>
        </tr>
    }
</table>
